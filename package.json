{
  "name": "openchat-web",
  "version": "0.1.0",
  "author": "Nacho Garc√≠a <lupus.zgz@gmail.com>",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "bootstrap": "^4.0.0",
    "font-awesome": "^4.7.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.0",
    "sweetalert": "^2.1.0",
    "timeago-react": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "cross-env CI=true npm-run-all -p unit lint"
    }
  },
  "standard": {
    "env": "jest",
    "parser": "babel-eslint",
    "ignore": [
      "src/registerServiceWorker.js"
    ],
    "globals": [
      "flushPromises",
      "createMockRouter",
      "localStorage",
      "contextTypes",
      "shallow",
      "mount"
    ]
  },
  "scripts": {
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-css": "node-sass-chokidar --include-path ./src/styles/scss --include-path ./node_modules src/styles/scss/ -o src/styles/css",
    "build": "npm run build-css && react-scripts build",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src/styles/scss/ --include-path ./node_modules src/styles/scss/ -o src/styles/css --watch --recursive",
    "unit": "react-scripts test unit --env=jsdom",
    "integration": "react-scripts test integration --env=jsdom",
    "test": "react-scripts test unit integration --env=jsdom",
    "lint": "standard",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.3",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.3",
    "husky": "^0.15.0-rc.8",
    "jest-serializer-html": "^5.0.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.2",
    "react-test-renderer": "^16.0.0",
    "standard": "^10.0.3"
  }
}
